{
    "compilerOptions": {
        "lib": ["es2019"],
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "outDir": "./dist"
    },
    "exclude": [
        "dist",
        "test",
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}

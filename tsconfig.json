{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "declaration": true,
        "sourceRoot": "lib",
        "outDir": "dist"
    },
    "exclude": [
        "dist",
        "test",
        "node_modules"
    ],
    "lib": [
        "es6",
        "dom",
        "es2017",
        "es2019",
        "es2020"
    ]
}